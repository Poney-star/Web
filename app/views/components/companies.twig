{% set images = [
    "cover-company-1.jpg", "cover-company-2.jpg", "cover-company-3.jpg", "cover-company-4.jpg",
    "cover-company-5.jpg", "cover-company-6.jpg", "cover-company-7.jpg", "cover-company-8.jpg",
    "cover-company-9.jpg", "cover-company-10.jpg", "cover-company-11.jpg", "cover-company-12.jpg",
    "cover-company-13.jpg", "cover-company-14.jpg", "cover-company-15.jpg", "cover-company-16.jpg",
    "cover-company-17.jpg", "cover-company-18.jpg", "cover-company-19.jpg", "cover-company-20.jpg",
    "cover-company-21.jpg", "cover-company-22.jpg", "cover-company-23.jpg", "cover-company-24.jpg",
    "cover-company-25.jpg", "cover-company-26.jpg", "cover-company-27.jpg", "cover-company-28.jpg",
    "cover-company-29.jpg", "cover-company-30.jpg", "cover-company-31.jpg", "cover-company-32.jpg",
    "cover-company-33.jpg"
] %}
{% for company in companies %}
    <div class="card">
        <div class="card-image">
            <img src="assets/covers/companys/{{ random(images) }}" alt="Image Entreprise">
        </div>
        <div class="card-content">
            <button class="favorite-btn"></button>
            <div class="card-info">
                <h3 class="card-title">Nom : <span>{{ company.Nom }}</span></h3>
                <p class="card-location">Adresse : <span>{{ company.Adresse }}</span></p>
            </div>
            <div class="card-details">
                <p>Nombre de stages : <span>{{ company.Nombre_De_Stages }}</span></p>
            </div>
            <div class="stars">
                {% if company.Note is not empty %}
                    {% for i in 1..(company.Note| round) %}
                        <span class="star">★</span>
                    {% endfor %}
                    {% if (5 - company.Note|round) > 0 %}
                        {% for i in 1..(5 - company.Note|round) %}
                            <span class="star" style="color: #ccc;">★</span>
                        {% endfor %}
                    {% endif %}
                {% else %}
                    {% for i in 1..5 %}
                        <span class="star" style="color: #ccc;">★</span>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="card-actions">
                <button class="action-btn edit-btn">Modifier</button>
                <span class="action-separator">/</span>
                <button class="action-btn delete-btn">Supprimer</button>
            </div>
        </div>
    </div>
{% else %}
    <p>Aucune entreprise disponible pour le moment.</p>
{% endfor %}
